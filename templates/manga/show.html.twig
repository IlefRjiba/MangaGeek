{% extends 'base.html.twig' %}

{% block title %}Manga{% endblock %}

{% block main %}
    <h1>Manga</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manga.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ manga.Name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ manga.Author }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if manga.imageName %}
                        <img src="{{ vich_uploader_asset(manga, 'imageFile') }}" alt="{{ manga.Name }}" style="max-width: 200px; max-height: 200px;">
                    {% else %}
                        <span>No image available</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_manga_index') }}">back to list</a>

    <a href="{{ path('app_manga_edit', {'id': manga.id}) }}">edit</a>

    {{ include('manga/_delete_form.html.twig') }}
{% endblock %}
