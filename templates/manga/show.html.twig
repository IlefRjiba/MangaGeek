{% extends 'base.html.twig' %}

{% block title %}Manga{% endblock %}

{% block main %}
    <h1 
        class="text-center my-4 fw-bold" 
        style="background: linear-gradient(90deg, #FF4500, #FFA500, #FFD700); -webkit-background-clip: text; color: transparent; font-family: 'Arial', sans-serif; text-transform: uppercase;">
        <i class="bi bi-journal-richtext"></i> Manga details
    </h1>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manga.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ manga.Name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ manga.Author }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if manga.imageName %}
                        <img src="{{ vich_uploader_asset(manga, 'imageFile') }}" alt="{{ manga.Name }}" style="max-width: 200px; max-height: 200px;">
                    {% else %}
                        <span>No image available</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
    <a class="btn mt-auto btn-sm btn-secondary" href="{{ path('app_manga_index') }}">back to list</a>

    <a class="btn btn-warning btn-sm" href="{{ path('app_manga_edit', {'id': manga.id}) }}">edit</a>
    <br><br>
    </div>

    <div class="text-center">
        {{ include('manga/_delete_form.html.twig') }}
    </div>

{% endblock %}
