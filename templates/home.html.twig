{% extends 'base.html.twig' %}

{% block title %}Welcome to Mangageek{% endblock %}

{% block main %}
    <style>
        body {
            /* height: 100vh; Ensure the background covers the full screen */
            margin: 0;

            background-color: #ffffff;
            opacity: 0.7;
            background-image:  radial-gradient(#f7a145 0.5px, transparent 0.5px), radial-gradient(#f7a145 0.5px, #ffffff 0.5px);
            background-size: 20px 20px;
            background-position: 0 0,10px 10px;
        }

        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .content-card {
            background-color: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        h1 {
            color: #FF4500; /* Vibrant orange */
            font-family: 'Arial Black', sans-serif;
        }

        p {
            color: #FF7F50; /* Coral tone */
            font-size: 1.25rem;
        }

        .btn-primary {
            color: white;
            background-color: #FFA500; /* Orange */
            border: none;
        }

        .btn-primary:hover {
            background-color: #FF7F50; /* Slightly darker coral */
        }

        .btn-danger {
            color: white;
            background-color: #FF6347; /* Tomato red */
            border: none;
        }

        .btn-danger:hover {
            background-color: #FF4500; /* Vibrant orange */
        }
    </style>

    <div class="centered-container">
        <div class="content-card text-center">
            <h1 class="fw-bold text-uppercase mb-4">Welcome to Mangageek</h1>
            <p class="mt-3 mb-4">
                Explore your manga collections, manage your shelves, and discover new stories to dive into.
            </p>

            <div>
                {% if app.user %}
                    <a href="{{ path('app_manga_index') }}" class="btn btn-primary btn-lg me-3 fw-bold">Go to Dashboard</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg fw-bold">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg fw-bold"style="background-color: #ff6f00; color: white;">Login</a>
                    
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
