{% extends 'base.html.twig' %}

{% block main %}
	<h1 class="text-center my-4 fw-bold" style="background: linear-gradient(90deg, #FF4500, #FFA500, #FFD700); -webkit-background-clip: text; color: transparent; font-family: 'Arial', sans-serif; text-transform: uppercase;">
		<i class="bi bi-journal-richtext"></i>
		Manga details
	</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ manga.id }}</td>
			</tr>
			<tr>
				<th>manga</th>
				<td>{{ manga.name }}</td>
			</tr>
			<tr>
				<th>author</th>
				<td>{{ manga.author }}</td>
			</tr>
			<tr>
				<th>Mangatheque(s)</th>
				<td>
					<ul>
						{% for mangatheque in manga.mangatheques %}
							<li>
								<a class="link-success" href="{{ path('app_mangatheque_show', {'id': mangatheque.id}) }}">
									{{ mangatheque.name }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</td>
			</tr>

		</tbody>
	</table>

	<div class="text-center">
		<a class="btn btn-warning btn-sm" href="{{ path('app_manga_edit', {'id': manga.id}) }}">Edit Manga</a>
		<a class="btn btn-secondary btn-sm" href="{{ path('app_mangatheque_index')}} ">Back to Mangath√®ques</a>
	</div>

{% endblock %}
