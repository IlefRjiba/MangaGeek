  {% block main %}
      <h1>Manga</h1>

      <table class="table">
          <tbody>
              <tr>
                  <th>Id</th>
                  <td>{{ manga.id }}</td>
              </tr>
              <tr>
                  <th>manga</th>
                  <td>{{ manga.name }}</td>
