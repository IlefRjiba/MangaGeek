{% extends 'base.html.twig' %}

{% block title %}Mangatheque{% endblock %}

{% block main %}
    <h1 
    class="text-center my-4 fw-bold" 
    style="background: linear-gradient(90deg, #FF4500, #FFA500, #FFD700); 
           -webkit-background-clip: text; 
           color: transparent; 
           font-family: 'Arial', sans-serif; 
           text-transform: uppercase;">
    <i class="bi bi-journal-text"></i> Mangatheque Details
</h1>

    <br>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mangatheque.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mangatheque.description }}</td>
            </tr>
            <tr>
                <th>Publiee</th>
                <td>{{ mangatheque.publiee ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Mangas</h2>

    <div class="container px-4 px-lg-5 mt-3">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for item in mangatheque.mangas %}
                <div class="col mb-4">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" 
                                src="{{ vich_uploader_asset(item, 'imageFile') ?: 'https://dummyimage.com/450x300/dee2e6/6c757d.jpg' }}" 
                                alt="Manga Image" />

                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{ item.name }}</h5>
                                <!-- Product author-->
                                Written by: <b>{{ item.author }}</b>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="{{ path( 'app_mangatheque_manga_show', {
                                    'mangatheque_id': mangatheque.id,
                                    'manga_id' : item.id
                                }) }}">See details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="text-center">
    <a class="btn mt-auto btn-sm btn-secondary" href="{{ path('app_member_show', {'id': mangatheque.member.id }) }}">back to member</a>
    <a href="{{ path('app_mangatheque_edit', {'id': mangatheque.id}) }}" class="btn btn-warning btn-sm">edit</a>
    </div>
    <br>
    <div class="text-center">
    {{ include('mangatheque/_delete_form.html.twig') }}
    </div>
{% endblock %}
